<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <solid android:color="#f5f5f5" />
            <corners android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp" android:topLeftRadius="3dp" android:topRightRadius="3dp"/>
            <stroke
                android:width="1dp"
                android:color="#f5f5f5" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#fff" />
            <corners android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp" android:topLeftRadius="3dp" android:topRightRadius="3dp"/>
            <stroke
                android:width="1dp"
                android:color="#fff" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle" >
            <solid android:color="#fff" />
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="0dp" android:topRightRadius="0dp"/>
            <stroke
                android:width="1dp"
                android:color="#fff" />
        </shape>
    </item>
</selector>