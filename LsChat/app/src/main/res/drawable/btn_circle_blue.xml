<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"  >
        <shape  android:shape="oval"
            android:useLevel="false" >
            <solid android:color="#05A8E3" />
            <stroke
                android:width="1dp"
                android:color="#05A8E3" />
            <size
                android:height="5dp"
                android:width="5dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape  android:shape="oval"
            android:useLevel="false" >
            <solid android:color="#00B8FB" />
            <stroke
                android:width="1dp"
                android:color="#00B8FB" />
            <size
                android:height="5dp"
                android:width="5dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape  android:shape="oval"
            android:useLevel="false" >
            <solid android:color="#eee" />
            <stroke
                android:width="1dp"
                android:color="#eee" />
            <size
                android:height="5dp"
                android:width="5dp" />
        </shape>
    </item>
</selector>