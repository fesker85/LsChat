<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGray"
    tools:context=".profile.activity.SettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:background="?attr/colorPrimary"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">
            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_arrow_back_white_24dp" />
            <TextView
                android:id="@+id/titleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_toRightOf="@id/backButton"
                android:text="@string/title_activity_setting"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/default_textsize" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/infoLayout"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:paddingLeft="@dimen/default_padding"
                    android:paddingRight="@dimen/default_padding"
                    android:paddingTop="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/item_preference_bg"
                    android:paddingBottom="12dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="个人信息"
                        android:textSize="16sp"
                        android:textColor="@color/colorBlack"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_keyboard_arrow_right_gray_24dp"
                        tools:ignore="VectorDrawableCompat" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/safeLayout"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:paddingLeft="@dimen/default_padding"
                    android:paddingRight="@dimen/default_padding"
                    android:paddingTop="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/item_preference_bg"
                    android:paddingBottom="12dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="帐号与安全"
                        android:textSize="16sp"
                        android:textColor="@color/colorBlack"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_keyboard_arrow_right_gray_24dp"
                        tools:ignore="VectorDrawableCompat" />
                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/noticeLayout"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="@dimen/default_padding"
                    android:paddingRight="@dimen/default_padding"
                    android:paddingTop="12dp"
                    android:background="@drawable/item_preference_bg"
                    android:paddingBottom="12dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="新消息通知"
                        android:textSize="16sp"
                        android:textColor="@color/colorBlack"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_keyboard_arrow_right_gray_24dp"
                        tools:ignore="VectorDrawableCompat" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:layout_marginRight="@dimen/default_margin"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorLightGray"></View>

                <RelativeLayout
                    android:id="@+id/disturbLayout"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:paddingLeft="@dimen/default_padding"
                    android:paddingRight="@dimen/default_padding"
                    android:paddingTop="12dp"
                    android:background="@drawable/item_preference_bg"
                    android:paddingBottom="12dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="勿扰模式"
                        android:textSize="16sp"
                        android:textColor="@color/colorBlack"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_keyboard_arrow_right_gray_24dp"
                        tools:ignore="VectorDrawableCompat" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:layout_marginRight="@dimen/default_margin"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorLightGray"></View>

                <RelativeLayout
                    android:id="@+id/privacyLayout"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:paddingLeft="@dimen/default_padding"
                    android:paddingRight="@dimen/default_padding"
                    android:paddingTop="12dp"
                    android:background="@drawable/item_preference_bg"
                    android:paddingBottom="12dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="隐私"
                        android:textSize="16sp"
                        android:textColor="@color/colorBlack"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_keyboard_arrow_right_gray_24dp"
                        tools:ignore="VectorDrawableCompat" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:layout_marginRight="@dimen/default_margin"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorLightGray"></View>
                <RelativeLayout
                    android:id="@+id/clearLayout"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:paddingLeft="@dimen/default_padding"
                    android:paddingRight="@dimen/default_padding"
                    android:paddingTop="12dp"
                    android:background="@drawable/item_preference_bg"
                    android:paddingBottom="12dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="一键清理"
                        android:textSize="16sp"
                        android:textColor="@color/colorBlack"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_keyboard_arrow_right_gray_24dp"
                        tools:ignore="VectorDrawableCompat" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:layout_marginRight="@dimen/default_margin"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorLightGray"></View>
                <RelativeLayout
                    android:id="@+id/generalLayout"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:paddingLeft="@dimen/default_padding"
                    android:visibility="gone"
                    android:paddingRight="@dimen/default_padding"
                    android:paddingTop="12dp"
                    android:background="@drawable/item_preference_bg"
                    android:paddingBottom="12dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="通用"
                        android:textSize="16sp"
                        android:textColor="@color/colorBlack"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_keyboard_arrow_right_gray_24dp"
                        tools:ignore="VectorDrawableCompat" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/aboutLayout"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:paddingLeft="@dimen/default_padding"
                    android:paddingRight="@dimen/default_padding"
                    android:paddingTop="12dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/item_preference_bg"
                    android:paddingBottom="12dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关于智慧校园"
                        android:textSize="16sp"
                        android:textColor="@color/colorBlack"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_keyboard_arrow_right_gray_24dp"
                        tools:ignore="VectorDrawableCompat" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/exitLayout"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:paddingLeft="@dimen/default_padding"
                    android:paddingRight="@dimen/default_padding"
                    android:paddingTop="12dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/item_preference_bg"
                    android:paddingBottom="12dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="退出登录"
                        android:textSize="16sp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/colorBlack"/>
                </RelativeLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>




</android.support.constraint.ConstraintLayout>