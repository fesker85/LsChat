<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:background="@color/colorLightGray"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".friend.activity.FriendActivity"
    tools:showIn="@layout/activity_friend">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:clickable="true"
            android:paddingRight="16dp"
            android:background="@drawable/list_item_bg"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">
            <ImageView
                android:id="@+id/avatarView"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/default_avatar"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/avatarView"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/nickView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/default_textsize"
                        android:textColor="@color/colorBlack"
                        android:text="张三"/>
                    <ImageView
                        android:id="@+id/sexView"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_female"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tagView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="手机号：131****0130"
                    android:textSize="@dimen/default_textsize"
                    android:textColor="@color/colorText"/>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/remarkView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_bg"
            android:layout_marginTop="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="设置备注"
            android:clickable="true"
            android:textSize="@dimen/default_textsize"
            android:gravity="center_vertical"
            android:textColor="@color/colorBlack"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:clickable="true"
            android:background="@drawable/list_item_bg">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/default_textsize"
                android:text="地区"/>
            <TextView
                android:id="@+id/regionView"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/default_textsize"
                android:textColor="@color/colorText"
                android:text="陕西 西安"/>
        </RelativeLayout>

        <Button
            android:id="@+id/chatButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_button_height"
            android:background="@drawable/btn_style_green"
            android:textColor="@color/colorWhite"
            android:text="发消息"
            android:textSize="@dimen/default_textsize"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"/>

        <Button
            android:id="@+id/addFriendButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_button_height"
            android:background="@drawable/btn_style_green"
            android:textColor="@color/colorWhite"
            android:text="加为朋友"
            android:textSize="@dimen/default_textsize"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"/>
        <Button
            android:id="@+id/passFriendButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_button_height"
            android:background="@drawable/btn_style_green"
            android:textColor="@color/colorWhite"
            android:text="通过验证"
            android:textSize="@dimen/default_textsize"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"/>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>