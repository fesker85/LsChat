<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:clickable="false"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:clickable="true"
            android:id="@+id/newfriend_layout"
            android:background="@drawable/list_item_bg"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_newfriend"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_margin="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/news_friends_icon"
                android:visibility="visible" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_newfriend"
                android:padding="5dp"
                android:text="新的朋友"
                android:textColor="@color/black"
                android:textSize="@dimen/default_textsize"
                android:visibility="visible" />
            <TextView
                android:id="@+id/countView"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/sharp_dot"
                android:layout_marginRight="16dp"
                android:textColor="@color/colorWhite"
                android:text="1"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLightGray"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:clickable="true"
            android:visibility="gone"
            android:id="@+id/group_layout"
            android:background="@drawable/list_item_bg"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_group"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_margin="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/default_group"
                android:visibility="visible" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_group"
                android:padding="5dp"
                android:text="群聊"
                android:textColor="@color/black"
                android:textSize="@dimen/default_textsize"
                android:visibility="visible" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:background="@color/colorLightGray"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:clickable="true"
            android:visibility="gone"
            android:id="@+id/school_layout"
            android:background="@drawable/list_item_bg"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_school"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_margin="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/default_school"
                android:visibility="visible" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_school"
                android:padding="5dp"
                android:text="学校"
                android:textColor="@color/black"
                android:textSize="@dimen/default_textsize"
                android:visibility="visible" />
        </RelativeLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>